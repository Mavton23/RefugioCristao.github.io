<link rel="stylesheet" href="/css/form.css">

<section class="sec-form">
  <div class="section-title">
    <h1>Excluir resposta</h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="answers">
        {{#each answers}}
        <div class="title">
          <h3>{{ title }}</h3>
        </div>
        <div class="category">
          <h4>{{ category }}</h4>
        </div>
          <a href="/deleteAnswer/{{id}}"><button type="submit">Excluir</button></a>
        {{/each}}
      </div>
    </div>
  </div>
</section>